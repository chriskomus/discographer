<div class="card" id="<%= dom_id album %>">
  <div class="card-header">
    <% album.artists.each_with_index do |artist, i| %><%= artist.name %><%= i+1 < album.artists.count ? ', ' : '' %><% end %> - <%= album.title %>
  </div>
  <img class="card-img-top" src="<%= album.imageuri %>" alt="<%= album.title %>">
  <div class="card-body">
    <h3><%= album.title %></h3>
    <h4>
      <% album.artists.each do |artist| %>
        <span class="badge rounded-pill bg-light text-dark"><%= artist.name %></span>
      <% end %>
    </h4>
    <p>
      <% album.releases.each do |release| %>
        <span class="badge rounded-pill bg-light text-dark"><%= release.catno %></span>
      <% end %>
    </p>
    <h4><%= album.year %></h4>
    <strong><%= album.country %></strong>
    <p><%= album.notes %></p>
  </div>
</div>