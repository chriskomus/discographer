<%= render 'layouts/heading', heading: "#{@genre.name}" %>

<!-- Grid Items-->
<h4 class="text-center text-uppercase text-secondary mb-0">Albums</h4>
<div class="row justify-content-center mt-5" id="albums">
  <% @genre.albums.each do |album| %>
    <%= render album %>
  <% end %>
</div>


<div>
  <%= link_to "Edit this genre", edit_genre_path(@genre), class: "btn btn-md btn-secondary m-2" %>
  <%= link_to "Back to genres", genres_path, class: "btn btn-md btn-secondary m-2" %>
  <%= button_to "Destroy this genre", @genre, method: :delete, class: "btn btn-md btn-danger m-2" %>
</div>
