<%= form_with(model: release) do |form| %>
  <% if release.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(release.errors.count, "error") %> prohibited this release from being saved:</h2>

      <ul>
        <% release.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= form.label :catno %> (Catalog Number)
    <%= form.text_field :catno, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :album_id %>
      <%= form.collection_select(:album_id, Album.all, :id, :title, { :prompt => "Please Select...", :selected => params[:album_id] || release.album_id }, { :class => 'form-control' }) %>
  </div>

  <div class="form-group">
    <%= form.label :label_id %>
    <%= form.collection_select(:label_id, Label.all, :id, :name, { :prompt => "Please Select..." }, { :class => 'form-control' }) %>
  </div>

  <div>
    <%= form.submit 'Submit', class: "btn btn-md btn-secondary mt-2" %>
  </div>

<% end %>
