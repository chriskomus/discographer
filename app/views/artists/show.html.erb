<%= render 'layouts/heading', heading: @artist.name %>

<div class="container">
  <div class="row">
    <% unless @artist.imageuri.blank? %>
      <div class="col">
        <div class="card">
          <img class="card-img-top" src="<%= @artist.imageuri %>" alt="<%= @artist.title %>">
        </div>
      </div>
    <% end %>
    <div class="col">
      <p><%= @artist.profile %></p>
      <a href="https://www.discogs.com/artist/<%= @artist.discogs_id %>" class="btn btn-xs btn-secondary" target="_blank"><i class="fa-solid fa-arrow-up-right-from-square"></i>
        Discogs</a>
    </div>
  </div>
</div>

<%= render 'layouts/heading' %>

<!-- Grid Items-->
<h4 class="text-center text-uppercase text-secondary mb-0">Albums</h4>
<div class="row justify-content-center mt-5" id="albums">
  <% @artist.albums.each do |album| %>
    <%= render album %>
  <% end %>
</div>

<%= render 'layouts/heading' %>

<!-- Grid Items-->
<h4 class="text-center text-uppercase text-secondary mb-0">Labels</h4>
<div class="row justify-content-center mt-5" id="genres">
  <% @artist.labels.each do |artist| %>
    <%= render artist %>
  <% end %>
</div>

<div>
  <%= link_to "Edit this artist", edit_artist_path(@artist), class: "btn btn-md btn-secondary m-2" %>
  <%= link_to "Back to artists", artists_path, class: "btn btn-md btn-secondary m-2" %>
  <%= button_to "Destroy this artist", @artist, method: :delete, class: "btn btn-md btn-danger m-2" %>
</div>
